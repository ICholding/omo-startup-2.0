# Enhanced Autonomous Agent Configuration
# Copy this file to .env.autonomous and fill in your values

# Core Settings
AGENT_MEMORY_PATH=./agent-memory.db
AGENT_WORKSPACE=./agent-workspace
AGENT_AUTO_EXECUTE=true
AGENT_MAX_EXEC_TIME=60000
AGENT_SELF_MODIFY=true

# Telegram Bot (if running standalone)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-app.onrender.com/webhook/telegram

# External Integrations
# Gmail API (for email access)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token

# SSH Access (for server management)
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_DEFAULT_USER=root
SSH_DEFAULT_HOST=your-server.com

# API Keys
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
GITHUB_TOKEN=your_github_token

# Backblaze B2
B2_APPLICATION_KEY_ID=your_key_id
B2_APPLICATION_KEY=your_app_key
B2_BUCKET_NAME=your_bucket

# Render
RENDER_API_KEY=your_render_key

# Logging
LOG_LEVEL=info
LOG_FILE=./agent.log
