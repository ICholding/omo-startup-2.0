# OpenClaw + omo-startup-2.0 Integration Environment
# Copy this file to .env.openclaw and fill in your values

# ============================================
# OPENCLAW CONFIGURATION
# ============================================

# Docker image to use
OPENCLAW_IMAGE=ghcr.io/icholding/omo-startup-2.0/openclaw:latest

# Gateway authentication token (generate with: openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=

# Gateway bind address (loopback, lan, or 0.0.0.0)
OPENCLAW_GATEWAY_BIND=lan

# Gateway ports
OPENCLAW_GATEWAY_PORT=18789
OPENCLAW_BRIDGE_PORT=18790
OPENCLAW_CANVAS_PORT=18793

# ============================================
# AI PROVIDER API KEYS
# ============================================

# OpenAI (required for GPT models)
OPENAI_API_KEY=

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=

# Google AI/Gemini (optional)
GOOGLE_AI_API_KEY=

# AWS Bedrock (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================
# CLAUDE DESKTOP INTEGRATION (Optional)
# ============================================
# These allow OpenClaw to integrate with Claude Desktop

CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=

# ============================================
# MESSAGING CHANNELS
# ============================================

# WhatsApp (enabled by default, requires QR scan)
WHATSAPP_ENABLED=true

# Telegram Bot (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=

# Discord Bot (optional)
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=

# Slack Bot (optional)
SLACK_ENABLED=false
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Signal (optional)
SIGNAL_ENABLED=false

# iMessage (macOS only, optional)
IMESSAGE_ENABLED=false

# ============================================
# ADDITIONAL EXTENSIONS
# ============================================

# Matrix
MATRIX_ENABLED=false
MATRIX_HOMESERVER=
MATRIX_ACCESS_TOKEN=

# Mattermost
MATTERMOST_ENABLED=false
MATTERMOST_URL=
MATTERMOST_TOKEN=

# IRC
IRC_ENABLED=false

# ============================================
# OMO-STARTUP INTEGRATION
# ============================================

# Backend service URLs (internal Docker network)
OMO_BACKEND_URL=http://backend:8080
OMO_FRONTEND_URL=http://frontend:3000

# Webhook bridge port
WEBHOOK_BRIDGE_PORT=8081

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Vector database for OpenClaw memory
VECTORDB_PASSWORD=openclaw_secure_password

# ============================================
# FEATURE FLAGS
# ============================================

# Enable AI coding agent
ENABLE_CODING_AGENT=true

# Enable browser automation
ENABLE_BROWSER=false

# Enable voice features
ENABLE_VOICE=false

# Enable Canvas UI generation
ENABLE_CANVAS=true

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# SECURITY
# ============================================

# Allowed CORS origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000
